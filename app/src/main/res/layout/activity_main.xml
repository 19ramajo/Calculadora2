<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscar.calculadora.MainActivity"
    android:background="@color/colorPrimary"
    android:cursorVisible="true"
    android:textCursorDrawable="@null">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:textSize="42sp"
        android:elevation="1dp"
        android:minHeight="99dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/pant"
        android:textAlignment="textEnd"
        android:autoText="false"
        android:clickable="false"
        android:maxLength="20"
        android:cursorVisible="true"
        android:fontFamily="casual" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tableLayout2"
        android:stretchColumns="*"
        android:layout_below="@id/pant">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="7"
                android:id="@+id/Boton7"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/Boton8"
                android:layout_column="1"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/Boton9"
                android:layout_column="2"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/Bdividir"
                android:layout_column="3"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/Boton4"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/Boton5"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/Boton6"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/Bmulti"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="1"
                android:id="@+id/Boton1"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/Boton2"
                android:layout_column="1"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/Boton3"
                android:layout_column="2"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/Brestar"
                android:layout_column="3"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="C"
                android:id="@+id/Bborrar"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/holo_red_dark"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/Boton0"
                android:layout_column="1"
                android:onClick="onClick"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/Bpunto"
                android:layout_column="2"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/Bsumar"
                android:layout_column="3"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="DEL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?android:attr/colorActivatedHighlight"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:onClick="onClick"
                android:id="@+id/Bborradig"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="M"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:onClick="onClick"
                android:id="@+id/Bmemoria"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="G"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:layout_margin="1dp"
                android:id="@+id/Bgrabar"
                android:onClick="onClick"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="="
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:id="@+id/Bresultado"
                android:onClick="onClick"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:fontFamily="casual" />

        </TableRow>
    </TableLayout>
</RelativeLayout>
